<mvc:View
	xmlns="sap.m" 
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	controllerName="tips.mes.controller.contents.employeeMgmt.EmployeeMgmt">
	<l:HorizontalLayout class="sapViewInner">
		<l:content>
			<VBox>
				<!-- Title & Description Area -->
				<l:HorizontalLayout class="titleArea">
					<Text text="근태관리" class="headCopy" />
					<Text text="{titleDesc>/menu_desc}" class="DescCopy" />
				</l:HorizontalLayout>
				
				<Panel accessibleRole="Region">
			        <HBox>
			            <VBox
			                width="20%"
			                class="sapUiSmallMarginEnd">
			                <Text text="검색 기준일"/>
			                <DateRangeSelection
			                    id="calendar"
			                    displayFormat="yyyy/MM/dd"
			                    change="handleChange"/>
			                <Label labelFor="calendar"/>
			            </VBox>
			        </HBox>
			        <VBox>
			        <HBox>
			            <Text text="Show"/>
			            <l:VerticalLayout
			                class="">
			                <ActionSelect
			                    id="show"
			                    items="{
 			                        path: '/Show',
 			                        sorter: { path: 'show' }
 			                    }">
			                    <items>
			                        <core:Item key="{Number}" text="{Number}" />
			                    </items>
			                </ActionSelect>
			            </l:VerticalLayout>
			            <Text text="entries"/>
			        </HBox>
			        <Toolbar>
			            <ToolbarSpacer/>
			            <Text text="Search:"/>
			            <SearchField
			                width="30%"
			                search=".onFilterInvoices"
			                ariaLabelledBy="searchFieldLabel"
			                ariaDescribedBy="searchFieldDescription"
			                placeholder="검색"/>
			        </Toolbar>
			        <Table
			                id="performance_management"
			                class=""
			                width="auto"
			                items="{
 			                    path : 'invoice>/Performance_Management'
 			                }">
			                <columns
			                    class="HBox-rows">
			                    <Column>
			                        <Text text="{i18n>columnNumber}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnDepartment}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnWorker}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnDate}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnOvertimeHours}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnRemainingTime}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnEstimatedWorkingHours}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnOvertime}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnExtraWork}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnAbsence}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnVacation}"/>
			                    </Column>
			                </columns>
			                <items>
			                    <ColumnListItem
								    type="Navigation"
			                        press=".onOpenPerformance">
			                        <cells>
			                            <ObjectNumber
			                                number="{
 			                                    parts: [{path: 'invoice>Number'}],
 			                                    formatOptions: {
 			                                        showMeasure: true
 			                                    }
 			                                }"/>
			                            <Text text="{invoice>OrderNo}"/>
			                            <Text text="{invoice>Supplier}"/>
			                            <Text text="{invoice>Name}"/>
			                            <Text text="{invoice>Size}"/>
			                            <Text text="{invoice>Process}"/>
			                            <Text text="{invoice>Mechine}"/>
			                            <Text text="{invoice>worker}"/>
			                        </cells>
			                    </ColumnListItem>
			                </items>
			            </Table>
			        </VBox>
				</Panel>
		        <Button
		        	text="기본설정"
		        	press=".onOpenSetting"/>
			</VBox>
		</l:content>
	</l:HorizontalLayout>
</mvc:View>