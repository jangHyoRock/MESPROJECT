<mvc:View
	xmlns="sap.m" 
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	controllerName="tips.mes.controller.contents.productionMgmt.OutsourcingMgmt">

	<l:HorizontalLayout class="sapViewInner">
		<l:content>
			<VBox>
 				<!-- Title & Description Area -->
 				<core:Fragment id="exportPrint" fragmentName="tips.mes.view.fragment.TitleDesc" type="XML" />

				<!-- Contents Area -->
				<Panel accessibleRole="Region">
			        <HBox>
			            <VBox
			                width="20%"
			                class="sapUiSmallMarginEnd">
			                <Text text="검색 기준일"/>
			                <DateRangeSelection
			                    id="calendar"
			                    displayFormat="yyyy/MM/dd"
			                    change="handleChange"/>
			                <Label labelFor="calendar"/>
			            </VBox>
			        </HBox>
			        <VBox>
			        <HBox>
			            <Text text="Show"/>
			            <l:VerticalLayout
			                class="">
			                <ActionSelect
			                    id="show"
			                    items="{
 			                        path: '/Show',
 			                        sorter: { path: 'show' }
 			                    }">
			                    <items>
			                        <core:Item key="{Number}" text="{Number}" />
			                    </items>
			                </ActionSelect>
			            </l:VerticalLayout>
			            <Text text="entries"/>
			        </HBox>
			        <Toolbar>
			            <ToolbarSpacer/>
			            <Text text="Search:"/>
			            <SearchField
			                width="30%"
			                search=".onFilterInvoices"
			                ariaLabelledBy="searchFieldLabel"
			                ariaDescribedBy="searchFieldDescription"
			                placeholder="검색"/>
			        </Toolbar>
			        <Table
			                id="performance_management"
			                class=""
			                width="auto"
			                items="{
 			                    path : 'invoice>/Performance_Management'
 			                }">
			                <columns
			                    class="HBox-rows">
			                    <Column>
			                        <Text text="{i18n>columnNumber}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnOrder}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnSupplier}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnName}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnSize}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnProcessName}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnOrderQuantity}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnOrderDate}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnCustomer}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnOrderSum}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnPayment}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnWarehousingQuantity}"/>
			                    </Column>
			                    <Column>
			                        <Text text="{i18n>columnWarehousingSum}"/>
			                    </Column>
			                </columns>
			                <items>
			                    <ColumnListItem
								    type="Navigation"
			                        press=".onOpenPerformance">
			                        <cells>
			                            <ObjectNumber
			                                number="{
 			                                    parts: [{path: 'invoice>Number'}],
 			                                    formatOptions: {
 			                                        showMeasure: true
 			                                    }
 			                                }"/>
			                            <Text text="{invoice>OrderNo}"/>
			                            <Text text="{invoice>Supplier}"/>
			                            <Text text="{invoice>Name}"/>
			                            <Text text="{invoice>Size}"/>
			                            <Text text="{invoice>Process}"/>
			                            <Text text="{invoice>Mechine}"/>
			                            <Text text="{invoice>worker}"/>
			                        </cells>
			                    </ColumnListItem>
			                </items>
			            </Table>
			        </VBox>
				</Panel>
			</VBox>
		</l:content>
	</l:HorizontalLayout>
</mvc:View>