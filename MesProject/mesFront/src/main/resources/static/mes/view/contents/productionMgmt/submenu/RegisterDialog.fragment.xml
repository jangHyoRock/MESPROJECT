<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Dialog
        id="processDialog"
        title="공정 설정/추가"
        contentWidth="50em">
        <HBox class="HBox-rows">
            <Text text="{i18n>columnOrder}" class="sapUiSmallMarginEnd rows-width"/>
            <Input id="order_no"/>
        </HBox>
        <HBox class="HBox-rows">
            <Text text="{i18n>columnSupplier}" class="sapUiSmallMarginEnd rows-width"/>
            <Input id="customers"/>
        </HBox>
        <HBox class="HBox-rows">
            <Text text="{i18n>columnDeadline}" class="sapUiSmallMarginEnd rows-width"/>
            <Input id="deadline" type="Date"/>
        </HBox>
        <HBox class="HBox-rows">
            <Text text="{i18n>columnName}" class="sapUiSmallMarginEnd rows-width"/>
            <Input id="product_name"/>
        </HBox>
        <HBox class="HBox-rows">
            <Text text="{i18n>columnSize}" class="sapUiSmallMarginEnd rows-width"/>
            <Input id="product_size"/>
        </HBox>
        <HBox class="HBox-rows">
            <Text text="{i18n>columnQuantity}" class="sapUiSmallMarginEnd rows-width"/>
            <Input id="quantity"/>
        </HBox>
        <HBox class="HBox-rows">
        <!-- 생산 수량 -->
            <Text text="{i18n>columnProductQuantity}" class="sapUiSmallMarginEnd rows-width"/>
            <Input type="Number" id="product_quantity"/>
        </HBox>
        <HBox class="HBox-rows">
        <!-- 계획 기간 -->
            <Text text="{i18n>columnPlanPeriod}" class="sapUiSmallMarginEnd rows-width"/>
            <Input type="Date" id="start_date"/>
            <Text text="~"/>
            <Input type="Date" id="end_date"/>
        </HBox>
        <HBox class="HBox-rows">
        <!-- 원자재 -->
            <Text text="{i18n>columnResource}" class="sapUiSmallMarginEnd rows-width"/>
            <l:VerticalLayout
                class=""
                width="100%">
                <ActionSelect
                    id="materials"
                    items="{
                        path: '/Resource',
                        sorter: { path: 'Name' }
                    }">
                    <items>
                        <core:Item key="{Name}" text="{Name}" id="sel_1"/>
                    </items>
                </ActionSelect>
            </l:VerticalLayout>
        </HBox>
        <HBox class="HBox-rows">
        <!-- 소요량 -->
            <Text text="{i18n>columnAmount}" class="sapUiSmallMarginEnd rows-width"/>
            <Input type="Number" id="required_quantity"/>
        </HBox>
        <HBox class="HBox-rows">
        <!-- 외주 여부 -->
            <Text text="{i18n>columnOutsorucing}" class="sapUiSmallMarginEnd rows-width"/>
            <l:VerticalLayout
                class=""
                width="100%">
                <ActionSelect
                    id="outsourcing"
                    items="{
                        path: '/Outsourcing',
                        sorter: { path: 'Name' }
                    }">
                    <items>
                        <core:Item key="{Name}" text="{Name}" id="sel_2"/>
                    </items>
                </ActionSelect>
            </l:VerticalLayout>
        </HBox>
        <Button
            text="저장"
            press=".onSaveDialog"/>
        <Button
            text="닫기"
            press=".onCloseDialog"/>
    </Dialog>
</core:FragmentDefinition>