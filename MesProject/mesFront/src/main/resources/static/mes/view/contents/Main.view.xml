<mvc:View
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:t="sap.ui.table" 
	xmlns:l="sap.ui.layout"
	controllerName="tips.mes.controller.contents.Main">

	<l:HorizontalLayout class="sapViewInner">
		<l:content>
			<VBox>
				<!-- Title & Description Area -->
				<l:HorizontalLayout class="titleArea">
					<Text text="{i18n>mainTitle}" class="headCopy" />
					<Text text="{i18n>mainDescription}" class="DescCopy" />
				</l:HorizontalLayout>

				<!-- Overview Content & Table Area -->
				<l:HorizontalLayout class="contentArea">
					<!-- Table Area -->
					<VBox>
						<Text text="Main Information" class="subTitle" />
						<t:Table id="idTable" selectionMode="None" rows="{product>/milk}" visibleRowCount="6">
							<t:columns>
								<t:Column resizable="true" hAlign="Center">
									<Label text="Seasons" />
									<t:template>
										<Text text="{product>Seasons}"/>
									</t:template>
								</t:Column>
								<t:Column resizable="true" hAlign="Center">
									<Label text="Revenue" />
									<t:template>
										<Text text="{product>Revenue}"/>
									</t:template>
								</t:Column>
							</t:columns>
						</t:Table>
					</VBox>
					<VBox>
						<Text text="Main Information2" class="subTitle" />
						<t:Table id="idTable2" selectionMode="None" rows="{product>/milk}" visibleRowCount="6">
							<t:columns>
								<t:Column resizable="true" hAlign="Center">
									<Label text="Seasons" />
									<t:template>
										<Text text="{product>Seasons}"/>
									</t:template>
								</t:Column>
								<t:Column resizable="true" hAlign="Center">
									<Label text="Revenue" />
									<t:template>
										<Text text="{product>Revenue}"/>
									</t:template>
								</t:Column>
							</t:columns>
						</t:Table>
					</VBox>
				</l:HorizontalLayout>
				
				<!-- Overview Content & Table Area -->
				<l:HorizontalLayout class="contentArea">
					<!-- Table Area -->
					<VBox>
						<Text text="Main Information3" class="subTitle" />
						<t:Table id="idTable3" selectionMode="None" rows="{product>/milk}" visibleRowCount="6">
							<t:columns>
								<t:Column resizable="true" hAlign="Center">
									<Label text="Seasons" />
									<t:template>
										<Text text="{product>Seasons}"/>
									</t:template>
								</t:Column>
								<t:Column resizable="true" hAlign="Center">
									<Label text="Revenue" />
									<t:template>
										<Text text="{product>Revenue}"/>
									</t:template>
								</t:Column>
							</t:columns>
						</t:Table>
					</VBox>
					<VBox>
						<Text text="Main Information4" class="subTitle" />
						<t:Table id="idTable4" selectionMode="None" rows="{product>/milk}" visibleRowCount="6">
							<t:columns>
								<t:Column resizable="true" hAlign="Center">
									<Label text="Seasons" />
									<t:template>
										<Text text="{product>Seasons}"/>
									</t:template>
								</t:Column>
								<t:Column resizable="true" hAlign="Center">
									<Label text="Revenue" />
									<t:template>
										<Text text="{product>Revenue}"/>
									</t:template>
								</t:Column>
							</t:columns>
						</t:Table>
					</VBox>
				</l:HorizontalLayout>
			</VBox>
		</l:content>
	</l:HorizontalLayout>
</mvc:View>