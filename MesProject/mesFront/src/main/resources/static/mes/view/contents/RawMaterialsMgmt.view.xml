<mvc:View
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    controllerName="tips.mes.controller.contents.RawMaterialsMgmt">


<l:HorizontalLayout class="sapViewInner">
	<l:content>
		<VBox>
		    <l:HorizontalLayout  class="center">
		        <Title text="원자재 관리" class="mainfont" />
		    </l:HorizontalLayout>
		
		
		    <VBox class="centerbox">
						    <HBox>
						        <Title text = "입고,생산 등록/조회" class="secondfont" />
						    </HBox>
						    <Text text='신규 등록은 "등록"버튼을 이용해주시고 수정시에서 원하는 리스트에서 클릭하시면 수정이 가능합니다.(수정 권한이 없을 경우 사용할 수 없음)' 
						     class="thridfont sapUiSmallMarginBegin sapUiMediumMarginBottom" />
			                        <HBox >
			                            <Title text="검색 기준일" class="secondfont" />
			                        </HBox>
			                
			                <SearchField
			                    width="26%"
								placeholder="2020/09/22~2020/12/22"
								class="field0-search"
			                    search=".onFilterInvoices" />
			                <HBox>
			                            <Text text="Show" class="selectext " />
			                            <ActionSelect
			                                items="{
			                                    path : 'combo>/ComboBox'
			                                }"
			                                autoAdjustWidth ="true"
			                                maxWidth="80% "
			                                class=" select">
			                                <core:Item key="{combo>key}" text="{combo>text}" />
			                            </ActionSelect>
			                            <Text text="entries" class="selectext" />
			                        	<HBox class="hbox2">
				                            <Text text="Search" class="selectext2" />
				                            <ToolbarSpacer />
				                            <SearchField  
				                            	search=".onFilterInvoices"
				                            	showSearchButton="false"
				                            	class="field1" />
			                            </HBox>
			                </HBox>
		
		    <l:HorizontalLayout class="table">
		        <Table
		            id="invoiceList"
		            width="auto"
		            items="{
		                path : 'invoice>/RawMaterials'
		            }">
		            <columns>
		                <Column
		                minScreenWidth="Small"
		                demandPopin="true"
		                width="8rem">
		                <Text text="#" />
		                </Column>
		                <Column>
		                <Text text="거래처" />
		                </Column>
		                <Column>
		                <Text text="품목코드" />
		                </Column>
		                <Column>
		                <Text text="품목명" />
		                </Column>
		                <Column>
		                <Text text="최근입고일" />
		                </Column>
		                <Column>
		                <Text text="최근출고일" />
		                </Column>
		                <Column>
		                <Text text="재고량" />
		                </Column>
		                <Column>
		                <Text text="출고" />
		                </Column>
		                <Column>
		                <Text text="입고/조정" />
		                </Column>
		            </columns>
		            <items>
		                <ColumnListItem
		                    id ="list"
		                    type="Navigation"
		                    press=".onPress">
		                    <cells>
		                        <Text text="{invoice>num7}" />
		                        <Text text="{invoice>num1}" />
		                        <Text text="{invoice>num2}" />
		                        <Text text="{invoice>num3}" />
		                        <Text text="{invoice>num4}" />
		                        <Text text="{invoice>num5}" />
		                        <Text text="{invoice>num6}" />
		                        <Button icon="sap-icon://cart-full" press=".Output" />
		                        <Button icon="sap-icon://edit" press=".Input" />
		                    </cells>
		                </ColumnListItem>
		            </items>
		        </Table>
		    </l:HorizontalLayout>
		    </VBox>
		</VBox>
	    <l:HorizontalLayout>
	        <Button text="창고관리" class="button4 sapUiTinyMarginBegin"  press=".Container" />
	        <Button text="자재입고" class="button5" press=".Register" />
	    </l:HorizontalLayout>
	</l:content>
</l:HorizontalLayout>


</mvc:View>