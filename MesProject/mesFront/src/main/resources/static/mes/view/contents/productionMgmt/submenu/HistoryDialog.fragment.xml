<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Dialog
        id="historyDialog"
        class="dialog-width"
        title="설비 관리 설정">
        <Button
            text="❌"
            press=".onCloseHistoryDialog"
            class="sapUiSmallMargin"/>
        <content>
            <VBox>
                <HBox
                	class="box-center">
                    <Text text="{i18n>columnMachineDivide}" class="left-padding rowbox"/>
                    <l:VerticalLayout
                        class="left-padding"
                        width="100%">
                        <ActionSelect
                            id="select"
                            items="{
                                path: '{/MechineDivide}',
                                sorter: { path: 'Name' }
                            }">
                            <items>
                                <core:Item key="{Name}" text="{Name}" />
                            </items>
                        </ActionSelect>
                    </l:VerticalLayout>
                </HBox>
                <HBox
                	class="box-center">
                    <Text text="{i18n>columnMachineName}" class="left-padding rowbox"/>
                    <Input type="Text" placeholder="*설비명" class="left-padding short-input"/>
                    <Input type="Text" placeholder="설비코드 (선택입력)" class="left-padding"/>
                </HBox>
                <HBox
                	class="box-center">
                    <Text text="{i18n>columnManufacturer}" class="left-padding rowbox"/>
                    <Input type="Text" placeholder="제조사" class="left-padding long-input" width="405px"/>
                </HBox>
            </VBox>
            <HBox class="button-right">
	            <Button
	                class="left-padding right-margin"
	                text="설비 등록"
	                press=""/>
            </HBox>
            <Table
                class="left-padding">
                <columns>
                    <Column>
                        <Text text="설비 구분"/>
                    </Column>
                    <Column>
                        <Text text="설비명"/>
                    </Column>
                    <Column>
                        <Text text="설비코드"/>
                    </Column>
                    <Column>
                        <Text text="제조사"/>
                    </Column>
                    <Column>
                        <Text text="사용 유무"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="스팟"/>
                            <Text text="스팟기"/>
                            <Text text="SPK"/>
                            <Text text=""/>
                            <Switch state="true" customTextOn="진행" customTextOff="취소">
                                <layoutData>
                                    <FlexItemData growFactor="1" />
                                </layoutData>
                            </Switch>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Dialog>
</core:FragmentDefinition>