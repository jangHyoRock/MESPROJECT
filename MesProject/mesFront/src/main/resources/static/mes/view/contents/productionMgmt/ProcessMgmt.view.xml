<mvc:View
	xmlns="sap.m" 
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:t="sap.ui.table" 
	xmlns:l="sap.ui.layout"
	controllerName="tips.mes.controller.contents.productionMgmt.ProcessMgmt">

	<l:HorizontalLayout class="sapViewInner">
		<l:content>
			<VBox>
 				<!-- Title & Description Area -->
 				<core:Fragment id="exportPrint" fragmentName="tips.mes.view.fragment.TitleDesc" type="XML" />

				<!-- Contents Area -->
				<Panel accessibleRole="Region">
					<headerToolbar>
						<Toolbar>
							<ToolbarSpacer/>
							<SearchField
								width="30%"
								search=".onFilterInvoices"
								ariaLabelledBy="searchFieldLabel"
								ariaDescribedBy="searchFieldDescription"
								placeholder="검색"/>
						</Toolbar>
					</headerToolbar>
					<Table
						id="invoiceList"
						class="sapUiResponsiveMargin"
						width="auto">
						<columns>
							<Column
								width="4em">
								<Text text="{i18n>columnNumber}"/>
							</Column>
							<Column
								width="12em">
								<Text text="{i18n>columnOrder}"/>
							</Column>
							<Column>
								<Text text="{i18n>columnSupplier}"/>
							</Column>
							<Column
								width="9em">
								<Text text="{i18n>columnItem}"/>
							</Column>
							<Column>
								<Text text="{i18n>columnSize}"/>
							</Column>
							<Column
								width="6em">
								<Text text="{i18n>columnProductQuantity}"/>
							</Column>
							<Column
								width="7em">
								<Text text="{i18n>columnDeadline}"/>
							</Column>
							<Column>
								<Text text="{i18n>columnResource}"/>
							</Column>
							<Column>
								<Text text="{i18n>columnAmount}"/>
							</Column>
							<Column>
								<Text text="{i18n>columnFloorPlan}"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem
								type="Navigation"
								press=".onPress">
								<cells>
									<Text text="{invoice>OrderNo}"/>
									<Text text="{invoice>OrderNo}"/>
									<Text text="{invoice>Supplier}"/>
									<Text text="{invoice>Name}"/>
									<Text text="{invoice>Size}"/>
									<ObjectNumber number="{invoice>Quantity}" emphasized="false"/>
									<Text text="{invoice>Deadline}"/>
									<ObjectNumber number="{invoice>Resource}" emphasized="false"/>
									<ObjectNumber number="{invoice>Amount}" emphasized="false"/>
									<Button icon="sap-icon://search" type="Transparent"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</Panel>
			</VBox>
		</l:content>
	</l:HorizontalLayout>
</mvc:View>