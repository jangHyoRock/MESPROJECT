<mvc:View
	xmlns="sap.m" 
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:t="sap.ui.table" 
	xmlns:l="sap.ui.layout"
	controllerName="tips.mes.controller.contents.productionMgmt.FacilityMgmt">

	
	<l:HorizontalLayout class="sapViewInner">
		<l:content>
			<VBox>
 				<!-- Title & Description Area -->
 				<core:Fragment id="exportPrint" fragmentName="tips.mes.view.fragment.TitleDesc" type="XML" />

				<!-- Contents Area -->
				<IconTabBar
					id="idIconTabBarNoIcons"
					expanded="{device>/isNoPhone}"
					class="sapUiResponsiveContentPadding">
					<items>
						<IconTabFilter text="설비 이력" key="info">
			    			<mvc:XMLView id="historyView" viewName="tips.mes.view.contents.productionMgmt.submenu.FacilityHistory"/>
						</IconTabFilter>
						<IconTabFilter text="설비별 정기 점검현황" key="attachments">
			    			<mvc:XMLView id="inspectionView" viewName="tips.mes.view.contents.productionMgmt.submenu.FacilityInspection"/>
						</IconTabFilter>
					</items>
				</IconTabBar>

			</VBox>
		</l:content>
	</l:HorizontalLayout>
</mvc:View>