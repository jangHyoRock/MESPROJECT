<mvc:View
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:t="sap.ui.table"
	xmlns:l="sap.ui.layout"
	controllerName="tips.mes.controller.contents.productionMgmt.submenu.FacilityHistory">
	
	<Text text="검색 기준일"/>
	<Panel accessibleRole="Region">
		<DateRangeSelection
            id="calendar"
            displayFormat="yyyy/MM/dd"
            change="handleChange"/>
        <Label labelFor="calendar"/>
		<Table
			id="invoiceList"
			class="sapUiResponsiveMargin"
			width="auto"
			items="{
				path : 'invoice>/Mechine_Maintenance'
			}">
			<columns>
				<Column
					minScreenWidth="Small"
					demandPopin="true"
					width="4em">
					<Text text="{i18n>columnNumber}"/>
				</Column>
				<Column
					minScreenWidth="Small"
					width="12em"
					demandPopin="true">
					<Text text="{i18n>columnMaintenanceDay}"/>
				</Column>
				<Column
					minScreenWidth="Small"
					demandPopin="true">
					<Text text="{i18n>columnMachineDivide}"/>
				</Column>
				<Column
					minScreenWidth="Small"
					demandPopin="false"
					width="6em">
					<Text text="{i18n>columnMachineName}"/>
				</Column>
				<Column
					minScreenWidth="Small"
					demandPopin="false">
					<Text text="{i18n>columnMaintenanceProvision}"/>
				</Column>
				<Column
					minScreenWidth="Small"
					demandPopin="false">
					<Text text="{i18n>columnMaintenanceDay}"/>
				</Column>
				<Column
					minScreenWidth="Small"
					width="8em">
					<Text text="{i18n>columnMaintenanceWorker}"/>
				</Column>
            </columns>
			<items>
				<ColumnListItem
					type="Navigation"
					press=".onPress">
					<cells>
						<ObjectNumber
							number="{
								parts: [{path: 'invoice>Number'}],
								formatOptions: {
									showMeasure: true
								}
							}"/>
						<Text text="{invoice>Day}"/>
						<Text text="{invoice>MechineDivide}"/>
						<Text text="{invoice>MechineName}"/>
						<Text text="{invoice>Provision}"/>
						<Text text="{invoice>Day}"/>
						<Text text="{invoice>Worker}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Panel>
    <Button
        text="설비 관리"
        press=".onOpenHistoryDialog"
        class="sapUiSmallMargin"/>
    <Button
        text="정기 점검 관리"
        press=".openInspectionMgmtDialog"
        class="sapUiSmallMargin"/>
    <Button
        text="설비 이력 작성"
        class="sapUiSmallMargin btn-right"
        press=""/>
</mvc:View>