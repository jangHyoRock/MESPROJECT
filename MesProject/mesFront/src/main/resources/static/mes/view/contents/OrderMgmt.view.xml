<mvc:View
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    controllerName="tips.mes.controller.contents.OrderMgmt">

		<l:HorizontalLayout class="sapViewInner">
		<l:content>
				<VBox>	 
			    <l:HorizontalLayout class="center">
			        <Title text="발주관리" class="mainfont" />
			    </l:HorizontalLayout>
			
			    <VBox class="centerbox">
								<HBox >
									<Title text="검색 기준일" class="secondfont" />
								</HBox>
						
			        	<SearchField
							width="26%"
							placeholder="2020/09/22~2020/12/22"
							class="field0-search" />
			    
			
			   			<HBox>
			                            <Text text="Show" class="selectext" />
			                            <ActionSelect
			                                items="{
			                                    path : 'combo>/ComboBox'
			                                }"
			                                autoAdjustWidth ="true"
			                                maxWidth="80% "
			                                class=" select">
			                                <core:Item key="{combo>key}" text="{combo>text}" />
			                            </ActionSelect>
			                            <Text text="entries" class="selectext" />
			                        	<HBox class="hbox">
			                            <Text text="Search" class="selectext2" />
			                            <ToolbarSpacer />
			                            <SearchField  
			                            	search=".onFilterInvoices"
			                            	showSearchButton="false"
			                            	class="field1" />
			                            </HBox>
			             </HBox>
			        <l:HorizontalLayout class="table"> 
			        <Table
			            id="invoiceList"
			            width="auto"
			            items="{
			                path : 'omodel2>/'
			            }">
			            <columns>
			                <Column
			                minScreenWidth="Small"
			                demandPopin="true"
			                width="8rem">
			                <Text text="#1" />
			                </Column>
			                <Column>
			                <Text text="수주NO" />
			                </Column>
			                <Column>
			                <Text text="매입처" />
			                </Column>
			                <Column>
			                <Text text="발주일" />
			                </Column>
			                <Column>
			                <Text text="참조" />
			                </Column>
			                <Column>
			                <Text text="금액" />
			                </Column>
			                <Column>
			                <Text text="납기일" />
			                </Column>
			                <Column>
			                <Text text="비고" />
			                </Column>
			                <Column>
			                <Text text="삭제" />
			                </Column>
			            </columns>
			            <items>
			                <ColumnListItem
			                    type="Navigation"
			                    press="onPress">
			                    <cells>
			                        <Text text="{omodel2>num1}" />
			                        <Text text="{omodel2>num2}" />
			                        <Text text="{omodel2>num3}" />
			                        <Text text="{omodel2>num4}" />
			                        <Text text="{omodel2>num5}" />
			                        <Text text="{omodel2>num6}" />
			                        <Text text="{omodel2>num7}" />
			                        <Text text="{omodel2>num8}" />
			                        <Button text="삭제" press="Delete" />
			                    </cells>
			                </ColumnListItem>
			            </items>
			        </Table>
			        </l:HorizontalLayout>
			        <!--  <Button icon="sap-icon://open-command-field" press="oButton1"  /> -->
			    </VBox>
					<l:HorizontalLayout>
			        <Button text="분류관리" class="sapUiSmallMarginEnd button2"  press=".Classify" />
			        <Button text="품목관리" class="sapUiLargeMarginEnd button3" press=".ItemManage" />
			        <Button text="등록"  press="Register" class="bottombutton" />
			    	</l:HorizontalLayout>
			</VBox>
        </l:content>
	</l:HorizontalLayout>	
	
</mvc:View>