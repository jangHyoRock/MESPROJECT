<mvc:View
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:t="sap.ui.table"
	xmlns:l="sap.ui.layout"
	controllerName="tips.mes.controller.contents.basicSetting.PartnerMgmt">

	<l:HorizontalLayout class="sapViewInner">
		<l:content>
			<VBox>
				<!-- Title & Description Area -->
				<core:Fragment id="exportPrint" fragmentName="tips.mes.view.fragment.TitleDesc" type="XML" />

				<!-- Overview Content & Table Area -->
				<Panel>
					<headerToolbar>
						<Toolbar>
							<ToolbarSpacer/>
							<Text text="Search:"/>
							<SearchField
								width="20%"
								search=".onFilterInvoices"
								ariaLabelledBy="searchFieldLabel"
								ariaDescribedBy="searchFieldDescription"/>
						</Toolbar>
					</headerToolbar>
					<Table
						id="idTable"
						class="sapUiResponsiveMargin"
						width="auto"
						items="{
							path : 'oModel3>/'
						}">
						<columns>
							<Column
								minScreenWidth="Small"
								demandPopin="true"
								width="4em">
								<Text text="#"/>
							</Column>
							<Column
								minScreenWidth="Small"
								width="12em"
								demandPopin="true">
								<Text text="분류"/>
							</Column>
							<Column
								minScreenWidth="Small"
								demandPopin="true">
								<Text text="업체코드"/>
							</Column>
							<Column
								minScreenWidth="Small"
								demandPopin="false"
								width="6em">
								<Text text="업체명"/>
							</Column>
							<Column
								minScreenWidth="Small"
								demandPopin="false">
								<Text text="대표"/>
							</Column>
							<Column
								minScreenWidth="Small"
								demandPopin="false">
								<Text text="사업자번호"/>
							</Column>
							<Column
								minScreenWidth="Small"
								width="8em">
								<Text text="유선전화"/>
							</Column>
							<Column
								minScreenWidth="Small"
								demandPopin="false">
								<Text text="팩스"/>
							</Column>
							<Column
								minScreenWidth="Small"
								demandPopin="false">
								<Text text="Email"/>
							</Column>
							<Column
								minScreenWidth="Small"
								demandPopin="false">
								<Text text="사용유무"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem
								type="Navigation"
								press=".onPress">
								<cells>
									<ObjectNumber
										number="{
											parts: [{path: 'oModel3>product_no'}],
											formatOptions: {
												showMeasure: true
											}
										}"/>
									<Text text="{oModel3>order_no}"/>
									<Text text="{oModel3>customers}"/>
									<Text text="{oModel3>product_name}"/>
									<Text text="{oModel3>product_size}"/>
									<ObjectNumber number="{oModel3>quantity}" emphasized="false"/>
									<Text text="{oModel3>deadline}"/>
									<Text text="{oModel3>materials}"/>
									<ObjectNumber number="{oModel3>required_quantity}" emphasized="false"/>
									<Switch state="true" customTextOn="진행" customTextOff="취소">
		                                <layoutData>
		                                    <FlexItemData growFactor="1" />
		                                </layoutData>
		                            </Switch>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
					<Button
						text="등록"
						press=".onOpenPartnerMgmtDialog"/>
				</Panel>
			</VBox>
		</l:content>
	</l:HorizontalLayout>
</mvc:View>